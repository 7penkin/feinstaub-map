@import './_settings'
@import './_material_color'

normalize-css()
base()
typography()


body
	background-color clr-grey-50
	display flex
	justify-content column
	overflow hidden

.map
	height 100vh
	flex 1 0

#cell-info
	width 10rem
	background-color clr-blue-grey-900
	color clr-grey-50
	padding .5rem
	overflow-y scroll
	height 100vh

	h3, td
		font-weight 200

	table
		width 100%
		margin-right 1rem
	td
		text-align right
	th
		font-weight 300
		border-bottom 2px solid clr-grey-50
	.mean
		border-bottom 1px solid clr-grey-50

.leaflet-pane > svg .d3-overlay path
	pointer-events all

.d3-tip
	font-family monospace
	font-size 0.4rem

	border-radius 3px
	background-color clr-blue-grey-900
	color clr-grey-50
	z-index 500
	font-weight 200
	text-align right
